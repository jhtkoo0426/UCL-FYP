<robot name="mug">
  <link name="mug_link">
      <contact>
    	<friction_anchor/>
    	   <lateral_friction value="0.5"/>
        <rolling_friction value="0.005"/>
        <spinning_friction value="0.005"/>
      </contact>
      <collision>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <mesh filename="mug.obj" />
          </geometry>
      </collision>
      <visual>
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>
              <mesh filename="mug.stl" />
          </geometry>
          <material name="TransparentGray">
              <color rgba="0.5 0.5 0.5 0.6"/>
          </material>
      </visual>
      <inertial>
          <origin xyz="0 0 0" rpy="0 0 0"/>
          <mass value="0.1"/>
          <!-- figure out proper inertia values
               try using this tutorial: http://gazebosim.org/tutorials?tut=inertia -->
          <inertia ixx="100"  ixy="0"  ixz="0" iyy="100" iyz="0" izz="100" />
      </inertial>
  </link>
</robot>